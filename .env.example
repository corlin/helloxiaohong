# 服务配置
PORT=3000
NODE_ENV=development

# 浏览器配置
HEADLESS=false              # true = headless, false = 有界面（更安全）
BROWSER_SLOW_MO=100         # 操作间隔(ms)，越大越像人

# 发布限制
DAILY_LIMIT=5               # 单账号日发布上限
MIN_INTERVAL_MINUTES=15     # 最小发布间隔（分钟）

# 人类行为模拟
MIN_DELAY_MS=2000           # 最小操作延迟
MAX_DELAY_MS=5000           # 最大操作延迟
TYPING_MIN_DELAY_MS=50      # 打字最小间隔
TYPING_MAX_DELAY_MS=150     # 打字最大间隔

# AI 容错 (可选)
ENABLE_AI_FALLBACK=false
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1

# 代理 (可选)
PROXY_SERVER=               # 例: http://user:pass@proxy.com:8080
